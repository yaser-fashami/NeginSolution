@{
    ViewData["Title"] = "Loading & Discharge Tariff Detail List";
}
@model LoadingDischargeTariff

<div class="card">
    <div class="card-header border-0 pt-5">
        <div class="card-title d-flex align-items-center mb-7">
            <div class="symbol symbol-50px me-5">
                <span class="symbol-label bg-light-success">
                    <!--begin::Svg Icon | path: icons/duotune/abstract/abs027.svg-->
                    <span class="svg-icon svg-icon-2x svg-icon-success">
                        <img src="/assets/media/images/hook.png" width="50px" />
                    </span>
                    <!--end::Svg Icon-->
                </span>
            </div>
            <div class="d-flex flex-column">
                <h3 class="card-label fw-bold text-dark">@Model.Description</h3>
                <span class="text-muted mt-1 fw-semibold fs-7">EffectiveDate: @Model.EffectiveDate.MiladiToShamsiDateString()</span>
            </div>
        </div>
    </div>
    <!--begin::Card body-->
    <div class="card-body p-10">
        <!--begin::Table-->
        <div class="table-responsive">
            <table class="table border gs-7 gy-3 gx-7">
                <thead>
                    <tr class="fw-bold fs-6 text-gray-800 border-bottom border-gray-200">
                        <th>Group Name</th>
                        <th>Goods</th>
                        <th>Price<sup>(Rial)</sup>/Ton</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach(LoadingDischargeTariffDetails loadingDischargeTariffDetails  in Model.LoadingDischargeTariffDetails)
                    {
                        <tr class="border fw-semibold fs-6 gs-7 gy-3 gx-7">
                            <td class="text-center">@loadingDischargeTariffDetails.GroupName</td>
                            <td>@loadingDischargeTariffDetails.Goods</td>
                            <td>
                                @loadingDischargeTariffDetails.Price.ToString("#,0") IRR
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <!--end::Table-->
    </div>
    <!--end::Card body-->
    <!--begin::Actions-->
    <div class="d-flex justify-content-end py-6 px-9">
        <a href="/BasicInfo/LoadingDischargeTariffList" class="btn btn-light btn-active-light-primary me-2">Back</a>
    </div>
    <!--end::Actions-->
</div>

