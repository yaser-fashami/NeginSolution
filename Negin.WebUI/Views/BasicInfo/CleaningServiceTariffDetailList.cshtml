@{
    ViewData["Title"] = "CleaningService Tariff Detail List";
}
@model CleaningServiceTariff

<div class="card">
    <div class="card-header border-0 pt-5">
        <div class="card-title d-flex align-items-center mb-7">
            <div class="symbol symbol-50px me-5">
                <span class="symbol-label bg-light-danger">
                    <!--begin::Svg Icon | path: icons/duotune/abstract/abs027.svg-->
                    <span class="svg-icon svg-icon-2x svg-icon-danger">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash" viewBox="0 0 16 16">
                            <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0V6z" />
                            <path fill-rule="evenodd" d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1v1zM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4H4.118zM2.5 3V2h11v1h-11z" />
                        </svg>
                    </span>
                    <!--end::Svg Icon-->
                </span>
            </div>
            <div class="d-flex flex-column">
                <h3 class="card-label fw-bold text-dark">@Model.Description</h3>
                <span class="text-muted mt-1 fw-semibold fs-7">EffectiveDate: @Model.EffectiveDate.MiladiToShamsiDateString()</span>
            </div>
        </div>
    </div>
    <!--begin::Card body-->
    <div class="card-body p-10">
        <!--begin::Table-->
        <div class="dataTables_wrapper dt-bootstrap4 no-footer">
            <div class="table-responsive">
                <table class="table align-middle table-row-dashed fs-6 gy-4" data-paging="false" data-info="false" data-responsive="true">
                    <!--begin::Table head-->
                    <thead>
                        <!--begin::Table row-->
                        <tr class="text-start text-gray-400 fw-bold fs-7 text-uppercase gs-0">
                            <th class="min-w-100px sorting" data-priority="1">Gross Weight <sup>(ton)</sup></th>
                            <th class="min-w-100px sorting">Price <sup>($)</sup></th>
                            <th class="min-w-100px sorting">Vat <sup>($)</sup></th>
                        </tr>
                        <!--end::Table row-->
                    </thead>
                    <!--end::Table head-->
                    <!--begin::Table body-->
                    <tbody class="text-dark fw-bold">
                        @foreach (CleaningServiceTariffDetails cleaningServiceTariffDetail in Model.CleaningServiceTariffDetails)
                        {
                            <tr>
                                <td>
                                    @cleaningServiceTariffDetail.GrossWeight
                                </td>
                                <td>
                                    @cleaningServiceTariffDetail.Price
                                </td>
                                <td>
                                    @cleaningServiceTariffDetail.Vat
                                </td>
                            </tr>
                        }
                    </tbody>
                    <!--end::Table body-->
                </table>
            </div>
        </div>
        <!--end::Table-->
    </div>
    <!--end::Card body-->
    <!--begin::Actions-->
    <div class="card-footer d-flex justify-content-end py-6 px-9">
        <a href="/BasicInfo/CleaningServiceTariffList" class="btn btn-light btn-active-light-primary me-2">Back</a>
    </div>
    <!--end::Actions-->
</div>

@section Scripts{
    <script src="~/assets/plugins/custom/datatables/datatables.bundle.js"></script>
}

@section Links{
    <link href="~/assets/plugins/custom/datatables/datatables.bundle.css" rel="stylesheet" />
}

