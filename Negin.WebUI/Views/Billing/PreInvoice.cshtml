                            <a href="#" id="print_btn" class="btn btn-sm btn-light-primary me-1">Print</a>
                            <a href="/Billing/CreateInvoice?voyageId=@Model.VoyageId" class="btn btn-sm btn-light-primary">Back</a>
                        </div>
                    </div>
