@{
    ViewData["Title"] = "PreInvoice  Loading / Discharge ";
}
@model PreLoadingDischargeInvoiceDto

<div class="card" id="preInvoice">
    <!--begin::Body-->
    <div class="card-body p-lg-20">
        <!--begin::Layout-->
        <div class="d-flex flex-column flex-xl-row">
            <!--begin::Content-->
            <div class="flex-lg-row-fluid me-xl-18 mb-10 mb-xl-0">
                <!--begin::Invoice 2 content-->
                <div class="mt-n1">
                    <!--begin::Top-->
                    <div class="row pb-10">
                        <!--begin::Logo-->
                        <div class="col-7">
                            <img alt="Logo" src="/assets/media/logos/LogoSina.PNG">
                        </div>
                        <!--end::Logo-->
                        <div class="col-5 text-end">
                            <a href="#" id="invoicing_btn" class="btn btn-sm btn-success me-1">Invoicing</a>
                            <a href="#" id="print_btn" class="btn btn-sm btn-light-primary me-1">Print</a>
                            <a href="/Billing/CreateLoadingDischargeInvoice?loadingDischargeId=@Model.LoadingDiascharge.Id" class="btn btn-sm btn-light-primary">Back</a>
                        </div>
                    </div>
                    <!--end::Top-->
                    <!--begin::Wrapper-->
                    <div class="m-0">
                        <!--begin::Label-->
                        <div class="fw-bold fs-3 text-gray-800 mb-8">Invoice No: #@Model.InvoiceNo</div>
                        <!--end::Label-->
                        <!--begin::Row-->
                        <div class="row g-5 mb-11">
                            <!--end::Col-->
                            <div class="col-sm-6">
                                <!--end::Label-->
                                <div class="fw-semibold fs-7 text-gray-600 mb-1">Invoice Date:</div>
                                <!--end::Label-->
                                <!--end::Col-->
                                <div class="fw-bold fs-6 text-gray-800">@Model.InvoiceDate.MiladiToShamsiDateString()</div>
                                <!--end::Col-->
                            </div>
                            <!--end::Col-->
                            <div class="col-sm-6">
                            </div>
                            <!--end::Col-->
                        </div>
                        <!--end::Row-->
                        <!--begin::Row-->
                        <div class="row g-5 mb-12">
                            <!--end::Col-->
                            <div class="col-sm-6">
                                <!--end::Label-->
                                <div class="fw-semibold fs-7 text-gray-600 mb-1">Issued For:</div>
                                <!--end::Label-->
                                <!--end::Text-->
                                <div class="fw-bold fs-6 text-gray-800">@Model.ShippingLineCompany.ShippingLineName (Porterage Company)</div>
                                <!--end::Text-->
                                <!--end::Description-->
                                <div class="fw-semibold fs-7 text-gray-600">
                                    <i class="bi bi-telephone me-2"></i>@Model.ShippingLineCompany.Tel
                                </div>
                                <!--end::Description-->

                            </div>
                            <!--end::Col-->
                            <!--end::Col-->
                            <div class="col-sm-6">
                                <!--end::Label-->
                                <div class="fw-semibold fs-7 text-gray-600 mb-1">Issued By:</div>
                                <!--end::Label-->
                                <!--end::Text-->
                                <div class="fw-bold fs-6 text-gray-800">@Model.CurrentUser</div>
                                <!--end::Text-->
                                <!--end::Description-->
                                <div class="fw-semibold fs-7 text-gray-600">
                                    <i class="bi bi-envelope me-1"></i>@Model.CurrentUserEmail
                                </div>
                                <!--end::Description-->
                            </div>
                            <!--end::Col-->
                        </div>
                        <!--end::Row-->
                        <!--begin::Content-->
                        <div>
                            <!--begin::Table-->
                            <div class="table-responsive mb-9 overflow-hidden">
                                <table class="table mb-3">
                                    <thead>
                                        <tr class="border-bottom fs-6 fw-bold text-muted">
                                            <th>VoyageNoIn</th>
                                            <th class="min-w-150px pb-2">Actual Time Arrival</th>
                                            <th class="min-w-150px pb-2">Actual Time Departure</th>
                                            <th class="text-end">Status</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr class="fw-bold text-gray-700 fs-5 text-end">
                                            <td class="text-start pt-8 fs-7">@Model.VesselStoppage.VoyageNoIn</td>
                                            <td class="d-flex align-items-center pt-6">
                                                <div class="badge badge-dark fw-bold">@Html.Raw(Model.VesselStoppage.ATA != null ? Model.VesselStoppage.ATA.Value.MiladiToShamsi().ToShamsiDateString(Model.VesselStoppage.ATADayOfTheWeek) : "")</div>
                                            </td>
                                            <td class="pt-5 text-start">
                                                <div class="badge badge-dark fw-bold">@Html.Raw(Model.VesselStoppage.ATD != null ? Model.VesselStoppage.ATD.Value.MiladiToShamsi().ToShamsiDateString(Model.VesselStoppage.ATDDayOfTheWeek) : "")</div>
                                            </td>
                                            <td class="pt-5 text-end">
                                                @if (Model.VesselStoppage.ATD != null)
                                                {
                                                    <span class="badge py-3 px-4 fs-7 badge-light-success">Gone</span>
                                                } else
                                                {
                                                    <span class="badge py-3 px-4 fs-7 badge-light-primary">InProcess</span>
                                                }
                                            </td>
                                        </tr>
                                        <tr>
                                            <td colspan="4">
                                                <table class="table mb-3">
                                                    <thead class="border-bottom">
                                                        <tr class="fs-6 fw-bold text-muted">
                                                            <th class="min-w-70px w-250px text-start pb-2">Operation</th>
                                                            <th class="min-w-70px pb-2">Tonage <sup>ton</sup></th>
                                                            <th class="min-w-80px pb-2">Price/Ton <sup>Rial</sup></th>
                                                            <th class="min-w-100px text-end pb-2">Sum <sup>Rial</sup></th>
                                                        </tr>
                                                    </thead>
                                                    <tbody>
                                                        <tr class="fw-bold text-gray-700 fs-5">
                                                            <td class="d-flex align-items-center pt-6">
                                                                <span class="symbol-label me-4">
                                                                    <span class="svg-icon svg-icon-2x">
                                                                        <img src="/assets/media/images/container.png" width="30px" />
                                                                    </span>
                                                                </span>
                                                                @if (Model.LoadingDiascharge.Method == LoadingDischarge.LoadingDischargeMethod.LOAD)
                                                                {
                                                                    <span>Loading Cost</span>
                                                                }
                                                                else if (Model.LoadingDiascharge.Method == LoadingDischarge.LoadingDischargeMethod.DISC)
                                                                {
                                                                    <span>Discharge Cost</span>
                                                                }
                                                            </td>
                                                            <td class="pt-6">@Model.LoadingDiascharge.Tonage.ToString("#,0") ton </td>
                                                            <td class="pt-6 fw-bolder">@Model.PerTonPrice.ToString("#,0") <sup>Rial</sup></td>
                                                            <td class="pt-6 text-dark fw-bolder text-end">
                                                                @Model.LDCostR.ToString("#,0") <sup>Rial</sup>
                                                            </td>
                                                        </tr>
                                                        @if (Model.LoadingDiascharge.HasCrane)
                                                        {
                                                            <tr class="fw-bold text-gray-700 fs-5">
                                                                <td class="d-flex align-items-center pt-6">
                                                                    <span class="symbol-label me-4">
                                                                        <span class="svg-icon svg-icon-2x">
                                                                            <img src="/assets/media/images/crane.png" width="30px" />
                                                                        </span>
                                                                    </span>
                                                                    <span>Crane Cost</span>
                                                                </td>
                                                                <td class="pt-6">-</td>
                                                                <td class="pt-6 fw-bolder">-</td>
                                                                <td class="pt-6 text-dark fw-bolder text-end">@Model.CraneCostR.ToString("#,0") <sup>Rial</sup></td>
                                                            </tr>
                                                        }
                                                        @if (Model.LoadingDiascharge.HasInventory)
                                                        {
                                                            <tr class="fw-bold text-gray-700 fs-5">
                                                                <td class="d-flex align-items-center pt-6">
                                                                    <span class="symbol-label me-4">
                                                                        <span class="svg-icon svg-icon-2x">
                                                                            <img src="/assets/media/images/recycle.png" width="30px" />
                                                                        </span>
                                                                    </span>
                                                                    <span>Inventory Cost</span>
                                                                </td>
                                                                <td class="pt-6">@Model.LoadingDiascharge.Tonage.ToString("#,0") ton</td>
                                                                <td class="pt-6 fw-bolder">@Model.InventoryTariffPrice.ToString("#,0") <sup>Rial</sup></td>
                                                                <td class="pt-6 text-dark fw-bolder text-end">
                                                                    @Model.InventoryCostR.ToString("#,0") <sup>Rial</sup>
                                                                </td>
                                                            </tr>
                                                        }
                                                    </tbody>
                                                </table>
                                                <div class="d-flex justify-content-end">
                                                    <!--begin::Section-->
                                                    <div class="mw-400px border border-dashed border-gray-300 card-rounded p-5">
                                                        <!--begin::Item-->
                                                        <div class="d-flex flex-stack mb-3">
                                                            <!--begin::Accountname-->
                                                            <div class="fw-semibold pe-10 text-gray-600 fs-7">Subtotal rial:</div>
                                                            <!--end::Accountname-->
                                                            <!--begin::Label-->
                                                            <div class="text-end fw-bold fs-6 text-gray-800">
                                                                @Model.TotalCostR.ToString("#,0") <sup>Rial</sup>
                                                            </div>
                                                            <!--end::Label-->
                                                        </div>
                                                        <!--end::Item-->
                                                        @if (Model.DiscountPercent > 0)
                                                        {
                                                            <!--begin::Item-->
                                                            <div class="d-flex flex-stack mb-3">
                                                                <div class="fw-semibold pe-10 text-gray-600 fs-7"><span>Discount: (@Model.DiscountPercent%) </span></div>
                                                                <div class="text-end fw-bold fs-6 text-gray-800">
                                                                    @Model.DiscountAmount.ToString("#,0") <sup>Rial</sup>
                                                                </div>
                                                            </div>
                                                            <!--end::Item-->
                                                            <!--begin::Item-->
                                                            <div class="d-flex flex-stack mb-3">
                                                                <div class="fw-semibold pe-10 text-gray-600 fs-7">Subtotal - Discount:</div>
                                                                <div class="text-end fw-bold fs-6 text-gray-800">
                                                                    @((Model.TotalCostR - Model.DiscountAmount).ToString("#,0"))
                                                                    <sup>Rial</sup>
                                                                </div>
                                                            </div>
                                                            <!--end::Item-->
                                                        }
                                                        <!--begin::Item-->
                                                        <div class="d-flex flex-stack mb-3">
                                                            <div class="fw-semibold pe-10 text-gray-600 fs-7">VAT: (@Model.VatPercent %) </div>
                                                            <div class="text-end fw-bold fs-6 text-gray-800">
                                                                @Model.VatCostR.ToString("#,0") <sup>Rial</sup>
                                                            </div>
                                                        </div>
                                                        <!--end::Item-->
                                                        <!--begin::Item-->
                                                        <div class="d-flex flex-stack">
                                                            <!--begin::Code-->
                                                            <div class="fw-semibold pe-10 text-gray-600 fs-7">Subtotal rial + VAT: </div>
                                                            <!--end::Code-->
                                                            <!--begin::Label-->
                                                            <div class="text-end fw-bold fs-6 text-gray-800">
                                                                @((Model.TotalCostR - Model.DiscountAmount + Model.VatCostR).ToString("#,0")) <sup>Rial</sup>
                                                            </div>
                                                            <!--end::Label-->
                                                        </div>
                                                        <!--end::Item-->
                                                    </div>
                                                    <!--end::Section-->
                                                </div>
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                            <!--end::Table-->
                        </div>
                        <!--end::Content-->
                    </div>
                    <!--end::Wrapper-->
                </div>
                <!--end::Invoice 2 content-->
            </div>
            <!--end::Content-->
            <!--begin::Sidebar-->
            <div class="m-0 page-break">
                <!--begin::Invoice 2 sidebar-->
                <div class="border border-dashed border-gray-300 card-rounded h-lg-100  p-9 bg-lighten">
                    <!--begin::Labels-->
                    <div class="mb-8">
                        <span class="fw-semibold">Vessel : </span>
                        <span class="badge badge-light-primary me-2">@Model.Vessel.Name </span>
                    </div>
                    <!--end::Labels-->
                    <!--begin::Title-->
                    <h5 class="mb-8 fw-bolder text-gray-600 text-hover-primary">VESSEL DETAILS</h5>
                    <!--end::Title-->
                    <!--begin::Item-->
                    <div class="mb-6">
                        <div class="fw-semibold text-gray-600 fs-7">Vessel Type:</div>

                        <div class="fw-bold text-gray-800 fs-6">@Model.Vessel?.Type?.Name</div>
                    </div>
                    <!--end::Item-->
                    <!--begin::Item-->
                    <div class="mb-6">
                        <div class="fw-semibold text-gray-600 fs-7">Gross Tonage:</div>

                        <div class="fw-bold fs-6 text-gray-800 d-flex align-items-center">
                            @Model.Vessel?.GrossTonage
                        </div>
                    </div>
                    <!--end::Item-->
                    <!--begin::Item-->
                    <div class="mb-6">
                        <div class="fw-semibold text-gray-600 fs-7">Vessel Flag:</div>

                        <div class="fw-bold text-gray-800 fs-6">
                            @Model.Vessel?.Flag?.Name
                            <img class="rounded-circle h-20px ms-2" src="../assets/media/flags/@Model.Vessel?.Flag?.FlagName" />

                        </div>
                    </div>
                    <!--end::Item-->
                    <!--begin::Item-->
                    <div class="mb-15">
                        <div class="fw-semibold text-gray-600 fs-7">Vessel Nationality:</div>

                        <div class="fw-bold text-gray-800 fs-6">
                            @Model.Vessel?.Nationality?.Name
                            <img class="rounded-circle h-20px ms-2" src="../assets/media/flags/@Model.Vessel?.Nationality?.FlagName" />

                        </div>
                    </div>
                    <!--end::Item-->
                    <!--begin::Item-->
                    <div class="mb-6">
                        <div class="fw-semibold text-gray-600 fs-7">VesselStoppage Issued By:</div>

                        <div class="fw-bold text-gray-800 fs-6">@Model.VesselStoppage.CreatedBy</div>
                    </div>
                    <!--end::Item-->
                </div>
                <!--end::Invoice 2 sidebar-->
            </div>
            <!--end::Sidebar-->
        </div>
        <!--end::Layout-->
    </div>
    <!--end::Body-->
</div>

@section Links{
    <link href="~/assets/plugins/custom/datatables/datatables.bundle.css" rel="stylesheet" />
    <style>
        .page-break {
            page-break-inside: avoid;
        }
    </style>
}

@section Scripts{
    <script src="~/lib/jquery.print/jquery.print.min.js"></script>
    <script src="~/assets/plugins/custom/datatables/datatables.bundle.js"></script>
    <script src="~/assets/js/custom/apps/loadingdischargeinvoicing.js"></script>
    <script type="text/javascript">
        $('#print_btn').click(function () {
            $('#preInvoice').print();
        })
    </script>
}
