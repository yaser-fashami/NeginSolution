@{
    Layout = "";
}
@using Negin.Core.Domain.Interfaces;
@inject IAppVersionService AppVersionService

<!doctype html>
<html lang="en">
<head>
    @if (AppVersionService.Beneficiary == Beneficiary.Negin)
    {
        <title>Negin Solution - LogIn</title>
        <style>
            body{
                background-image: url(/assets/media/images/bgLogin.jpg);
            }
        </style>
    }
    @if (AppVersionService.Beneficiary == Beneficiary.SinaOil)
    {
        <title>Sina Oil Solution - LogIn</title>
        <style>
            body {
                background-image: url(/assets/media/images/bgLoginSinaOil.jpg);
            }
        </style>
    }

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/lib/bootstrap-icons/font/bootstrap-icons.min.css" rel="stylesheet" />
    <link href="~/css/login.css" rel="stylesheet" />
</head>
<body class="img js-fullheight">
    <section class="ftco-section">
        <div class="container" style="background-color: rgb(0,0,0,0.5); border-radius:25px; padding:50px;padding-bottom:20px">
            <div class="row justify-content-center">
                <div class="col-md-6 text-center mb-5">
                    @if (AppVersionService.Beneficiary == Negin.Core.Domain.Interfaces.Beneficiary.Negin)
                    {
                        <h1 class="heading-section">Negin Solution LogIn</h1>
                    }
                    @if (AppVersionService.Beneficiary == Negin.Core.Domain.Interfaces.Beneficiary.SinaOil)
                    {
                        <h1 class="heading-section">Sina Oil Solution LogIn</h1>
                    }

                    <img src="~/assets/media/logos/logo.png" />
                </div>
            </div>
            <div class="row justify-content-center">
                <div class="col-md-6 col-lg-4">
                    <div class="login-wrap p-0">
                        <h5 class="mb-4 text-center">Have an account?</h5>
                        <form asp-controller="Account" asp-action="Login" method="post" class="signin-form">
                            <div class="form-group">
                                <input type="text" name="userName" class="form-control" placeholder="Username" required>
                            </div>
                            <div class="form-group">
                                <input id="password-field" name="password" type="password" class="form-control" placeholder="Password" required>
                                <span toggle="#password-field" class="bi bi-eye-fill field-icon toggle-password"></span>
                            </div>
                            <div class="form-group">
                                <button type="submit" class="form-control btn btn-primary submit px-3">Sign In</button>
                            </div>
                            <div class="form-group d-md-flex">
                                <div class="w-50">
                                    <label class="checkbox-wrap checkbox-primary">
                                        Remember Me
                                        <input type="checkbox" checked class="form-check" name="remmemberMe" value="true" onchange="this.value=this.checked">
                                        <span class="checkmark"></span>
                                    </label>
                                </div>
                               
                           </div>
                            <div asp-validation-summary="All" class="text-danger"></div>
                        </form>
                    </div>
                </div>
            </div>
            <span style="font-size:14px"> Created By: Sina TOS Team</span>
        </div>
    </section>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script type="text/javascript">
        (function($) {

	    "use strict";

	    var fullHeight = function() {

		    $('.js-fullheight').css('height', $(window).height());
		    $(window).resize(function(){
			    $('.js-fullheight').css('height', $(window).height());
		    });

	    };
	    fullHeight();

	    $(".toggle-password").click(function() {

          $(this).toggleClass("bi bi-eye-slash");
	      var input = $($(this).attr("toggle"));
	      if (input.attr("type") == "password") {
	        input.attr("type", "text");
	      } else {
	        input.attr("type", "password");
	      }
	    });

    })(jQuery);
    
    </script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
</body>
</html>

